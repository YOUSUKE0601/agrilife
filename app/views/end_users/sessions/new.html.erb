<div class="container">
  <div class="row no-gutters">
    <div class="col-lg-5 mx-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">ログイン</h5>
      <div class="form-body p-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= flash[:alert]%>
          <div class="input-group mb-3 mt-4">
            <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder:"Email" %>
          </div>
          <div class="input-group mb-3">
            <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder:"パスワード" %>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <div>
            <%= render "end_users/shared/links" %>
          </div>
          <% end %>
          <div class="actions mb-4 float-right">
            <%= f.submit "Log in" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>