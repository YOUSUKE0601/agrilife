<!DOCTYPE html>
<html>
  <head>
    <title>AgriLife</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <ul>
        <% if end_user_signed_in? %>
          <li>
            <%= link_to "About", about_path %>
          </li>
          <li>
            <%= link_to "My page", my_page_public_end_users_path %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete  %>
          </li>
        <% else %>
          <li>
            <%= link_to "新規登録", new_end_user_registration_path %>
          </li>
          <li>
            <%= link_to "ログイン", new_end_user_session_path %>
          </li>
        <% end %>
      </ul>


    </header>
    <%= yield %>
  </body>
</html>
