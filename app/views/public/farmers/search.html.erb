<div class="container">
  <div class="row">
    <div class="search_form my-5">
      <%= search_form_for @q, url: search_public_farmers_path do |f| %>
        <%= f.search_field :farm_name_cont, placeholder: "農園名を検索", class: "form-control" %>
          <%= f.submit "検索", class: " my-3 btn btn-primary " %>
        <% end %>
    </div>
  </div>
  <h4>・カテゴリーで探す</h4>
  <div class="category d-flex justify-content-around mt-5">
    <div>
      <%= link_to "野菜", search_public_farmers_path("q[category_eq]" => 0), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "果物", search_public_farmers_path("q[category_eq]" => 1), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "米", search_public_farmers_path("q[category_eq]" => 2), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "畜産", search_public_farmers_path("q[category_eq]" => 3), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "その他", search_public_farmers_path("q[category_eq]" => 4), class: "btn btn-primary" %>
    </div>
  </div>
  <h4 class="my-5">・エリアから探す</h4>
  <div class="category d-flex justify-content-around">
    <div>
      <%= link_to "北海道", search_public_farmers_path("q[region_eq]" => 0), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "東北", search_public_farmers_path("q[region_eq]" => 1), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "関東", search_public_farmers_path("q[region_eq]" => 2), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "中部", search_public_farmers_path("q[region_eq]" => 3), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "関西", search_public_farmers_path("q[region_eq]" => 4), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "中国・四国", search_public_farmers_path("q[region_eq]" => 5), class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "九州・沖縄", search_public_farmers_path("q[region_eq]" => 6), class: "btn btn-primary" %>
    </div>
  </div>
</div>



<div class="result">
  <% if @farmers.any? %>
    <div class="card-list-containar py-5">
      <% @farmers.each do |farmer| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <%= link_to public_farmer_path(farmer) do %>
            <%= attachment_image_tag farmer, :farm_image, class:"card-img-top"; %>
          <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= attachment_image_tag farmer, :profile_image, :fill, 80, 80, fallback: "no_image.jpeg", class:"mt-3 rounded-circle"; %>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <%= link_to(public_farmer_path(farmer), class:"text-dark") do %>
                    <strong><%= farmer.farm_name %></strong>
                  <% end %>
                </p>
                <p class="card-text">紹介:　<%= farmer.introduction %></p>
                <span>都道府県： <%= farmer.prefecture %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% elsif  @farmers.empty? && params[:q] %>
    <h1>検索できませんでした</h1>
  <% else %>
      <p></p>
  <% end %>
</div>


