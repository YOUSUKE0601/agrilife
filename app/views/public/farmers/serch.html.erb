<div class="container">
  <div class="row">
    <div class="serch_form">
    <%= search_form_for @q, url: serch_public_farmers_path do |f| %>
      <%= f.search_field :farm_name_cont, placeholder: "農園名を検索", class: "form-control" %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
    
    <div class="result">
      <% if @farmers.any? %>
        <%= @farmers.each do |farmer| %>
          <%= farmer.farm_name %>
        <% end %>
      <% else %>
        <h1>検索できませんでした</h1>
      <% end %>
    </div>
  </div>
</div>    

