
<div class="container">
  <%= form_with model:@end_user, url: public_end_user_path(@end_user), method: :patch, local:true do |f| %>
    <div class="row">
      <h2>編集</h2>
      <div class="col-lg-3">
        <div class="form-group">
          <label for="end_user_image">ProfileImage</label>
          <%= attachment_image_tag @end_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: 'form-control-file end_user_image' %>
        </div>
      </div>
      <div class="col-lg-7">
        <div　class="form-group">
          <label for="end_user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: 'form-control name' %>
        </div>
        <div class="form-group">
          <label for="end_user_email">Email</label>
          <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス", class: 'form-control email' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-secondary' %>
      </div>
      <div class="withdrawal">
        <%= link_to "退会する", unsubscribe_public_end_users_path, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>