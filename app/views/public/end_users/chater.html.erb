<h1>チャット履歴一覧</h1>
  <% if @farmers.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>プロフィール写真</th>
          <th>名前</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @farmers.each do |farmer| %>
          <tr>
            <td><%= attachment_image_tag farmer, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class: "rounded-circle"; %></td>
            <td><%= farmer.name %></td>
            <td><%= farmer.farm_name %></td>
            <td>
              <% farmer_room = current_end_user.with_farmer_room(farmer) %>
              <%= link_to "チャットへ", public_farmer_room_path(id: farmer_room.id, farmer_id: farmer.id), class:"btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>